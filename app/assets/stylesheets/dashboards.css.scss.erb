//= require_self

#more-info {
  margin-top: -30px;
}

#stats {
  .stat-outer {
    height: 194px;
    margin-top: 15px;
    margin-left: 10px;
    margin-bottom: 20px;
    padding-top: 8px;

    table {
      th, td {
        width: 33%;
        text-align: center;
      }

      th {
        font-size: 23px
      }

      td {
        font-size: 34px;

        .chart {
          margin-left: 8px;
        }
      }
    }

  }
}

#user {
  h4 {
    font-size: 27px;
    margin-top: 10px;

    &.since, &.location {
      font-size: 15px;
    }
  }

  img {
    float: left;
    margin-right: 15px;
    margin-left: 10px;
    height: 130px;
    -webkit-border-radius: 10px;
    border-radius: 10px;
    -moz-border-radius: 10px;
    box-shadow: 0px 1px 17px 2px rgba(51, 51, 51, .1);
  }
}

#dashboard {
  #types {
    width: 1040px;
    margin: auto;
  }
}
