//= require_self

#more-info {
  margin-top: -30px;
}

#stats {
  .stat-outer {
    height: 130px;
    margin-top: 15px;

    .stat {
      float: left;
      width: 310px;
      margin-right: 15px;

      &:last-child {
        margin-right: 0;
      }

      h2 {
        font-size: 30px;
      }

      p {
        font-size: 11px;
      }

      h4 {
        float: left;
        font-size: 55px;
        margin-right: 12px;

      }
    }
  }

  .chart {
    float: left;
    margin-left: -20px;
  }
}

#people {
  position: absolute;
  background-color: white;
  z-index: 2;
  width: 100%;
  min-height: 200px;
  margin: -32px 0 0 0;
  padding: 40px 0 0 0;
  border-top: 4px solid #eaeaea;
  left: 0;
}

#user {
  h4 {
    font-size: 22px;
    margin-top: 10px;
  }

  img {
    float: left;
    margin-right: 15px;
    height: 130px;
  }
}
