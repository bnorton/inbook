//= require_self

#more-info {
  margin-top: -30px;
}

#stats {
  .stat-outer {
    height: 130px;
    margin-top: 15px;

    .stat {
      float: left;
      width: 310px;
      margin-right: 15px;

      &:last-child {
        margin-right: 0;
      }

      h2 {
        font-size: 30px;
      }

      p {
        font-size: 11px;
      }

      h4 {
        float: left;
        font-size: 55px;
        margin-right: 12px;
      }
    }
  }

  .chart {
    float: left;
    margin-left: -20px;
  }
}

.border {
  position: absolute;
  min-height: 1407px;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: white;
  margin: -32px 0 0 0;
  padding: 40px 0 0 0;
  border-top: 4px solid #aaaaaa;
  left: 0;
}

#user {
  h4 {
    font-size: 22px;
    margin-top: 10px;

    &.since {
      font-size: 15px;
    }
  }

  img {
    float: left;
    margin-right: 15px;
    height: 130px;
  }
}
